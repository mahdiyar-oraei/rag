# Copy this file to .env and add your API keys
OPENAI_API_KEY=sk-your-key-here
HUBSPOT_ACCESS_TOKEN=your-hubspot-private-app-token-here

# Facebook Messenger (for webhook integration)
FB_VERIFY_TOKEN=your-verify-token-for-webhook-setup
FB_PAGE_ACCESS_TOKEN=your-page-access-token
FB_APP_SECRET=your-app-secret-optional-for-signature-verification

# Railway / long-running requests (reduce 502 errors)
# SKIP_QUERY_CORRECTION=true   # Skip LLM query correction (saves ~5s per request)
# TOP_K=10                     # Fewer chunks = faster retrieval (default: 10)
# LLM_REQUEST_TIMEOUT=120       # Seconds before OpenAI request times out
